---
import Base from "../layouts/Base.astro";

// Contact info
const EMAIL = "dorsemtov@gmail.com";
const LINKEDIN_URL = "https://www.linkedin.com/in/dorshemtov";
const PHONE = "054-293-2728";

// Derived links
const MAILTO = `mailto:${EMAIL}`;
const TEL = `tel:${PHONE.replace(/[^+\d]/g, "")}`;
---

<Base title="Contact — Dor Shem Tov">
  <section class="min-h-[55vh] flex items-center justify-center">
    <div class="w-full max-w-xl text-center">
      <h1 class="text-3xl sm:text-4xl font-bold text-accent">Contact info</h1>
      <p class="mt-3 text-sm sm:text-base text-neutral-300">
        Reach out directly — I usually respond quickly.
      </p>

      <div class="mt-8 grid gap-3">
        <!-- Email -->
        <a
          class="card flex items-center justify-between gap-4 px-5 py-4 hover:border-white/20 transition"
          href={MAILTO}
        >
          <div class="flex items-center gap-3">
            <span class="icon">
              <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path
                  d="M4 7.5A2.5 2.5 0 0 1 6.5 5h11A2.5 2.5 0 0 1 20 7.5v9A2.5 2.5 0 0 1 17.5 19h-11A2.5 2.5 0 0 1 4 16.5v-9Z"
                  stroke="currentColor"
                  stroke-width="1.8"
                />
                <path
                  d="M6.5 7l5.5 4 5.5-4"
                  stroke="currentColor"
                  stroke-width="1.8"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
            </span>
            <div class="text-left">
              <div class="text-sm text-neutral-400">Email</div>
              <div class="font-medium">{EMAIL}</div>
            </div>
          </div>
          <span class="text-accent text-sm">→</span>
        </a>

        <!-- LinkedIn -->
        <a
          class="card flex items-center justify-between gap-4 px-5 py-4 hover:border-white/20 transition"
          href={LINKEDIN_URL}
          target="_blank"
          rel="noreferrer"
        >
          <div class="flex items-center gap-3">
            <span class="icon">
              <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path
                  d="M6.5 9.5V18"
                  stroke="currentColor"
                  stroke-width="1.8"
                  stroke-linecap="round"
                />
                <path
                  d="M6.5 6.5h.01"
                  stroke="currentColor"
                  stroke-width="3"
                  stroke-linecap="round"
                />
                <path
                  d="M10.5 18v-5.2c0-1.9 1.2-3.3 3.1-3.3 1.8 0 2.9 1.3 2.9 3.3V18"
                  stroke="currentColor"
                  stroke-width="1.8"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
                <path
                  d="M10.5 9.5V18"
                  stroke="currentColor"
                  stroke-width="1.8"
                  stroke-linecap="round"
                />
                <path
                  d="M19.5 5.5h-15A2 2 0 0 0 2.5 7.5v9A2 2 0 0 0 4.5 18.5h15a2 2 0 0 0 2-2v-9a2 2 0 0 0-2-2Z"
                  stroke="currentColor"
                  stroke-width="1.2"
                  opacity="0.35"
                />
              </svg>
            </span>
            <div class="text-left">
              <div class="text-sm text-neutral-400">LinkedIn</div>
              <div class="font-medium">linkedin.com/in/dorshemtov</div>
            </div>
          </div>
          <span class="text-accent text-sm">↗</span>
        </a>

        <!-- Phone -->
        <a
          class="card flex items-center justify-between gap-4 px-5 py-4 hover:border-white/20 transition"
          href={TEL}
        >
          <div class="flex items-center gap-3">
            <span class="icon">
              <svg viewBox="0 0 24 24" fill="none" aria-hidden="true">
                <path
                  d="M8.2 5.6c.4-1 1.5-1.5 2.5-1.1l1.2.5c.7.3 1.1 1 .9 1.7l-.7 2.2c-.2.6 0 1.2.5 1.6l1.7 1.3c.5.4 1.2.4 1.8.1l2-1c.7-.3 1.6 0 1.9.7l.6 1.4c.4 1-.1 2.1-1.1 2.5-1.6.7-3.8 1.2-6.3-.4-2.1-1.3-3.8-3-5.1-5.1-1.6-2.5-1.1-4.7-.4-6.3Z"
                  stroke="currentColor"
                  stroke-width="1.6"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
            </span>
            <div class="text-left">
              <div class="text-sm text-neutral-400">Phone</div>
              <div class="font-medium">{PHONE}</div>
            </div>
          </div>
          <span class="text-accent text-sm">→</span>
        </a>
      </div>
    </div>
  </section>

  <style>
    .icon {
      width: 40px;
      height: 40px;
      border-radius: 14px;
      display: grid;
      place-items: center;
      background: rgba(255, 255, 255, 0.06);
      border: 1px solid rgba(255, 255, 255, 0.08);
      color: rgba(242, 201, 76, 0.95);
      flex: 0 0 auto;
    }

    .icon svg {
      width: 20px;
      height: 20px;
    }
  </style>
</Base>
