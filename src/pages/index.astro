---
import Base from "../layouts/Base.astro";
import { getAllProjects } from "../lib/projects";

const allProjects = getAllProjects();

/* MANUAL FEATURED PROJECTS (ORDERED) */
const FEATURED_SLUGS = [
  "warriors-merge",
  "ice-slingers",
  "orbit-defense",
  "peg-slinger",
  "devoured",
];

const featuredProjects = FEATURED_SLUGS
  .map((slug) => allProjects.find((p) => p.slug === slug))
  .filter(Boolean);
---

<Base title="DST — Dor Shem Tov">

  <!-- HERO -->
  <section class="grid gap-8 md:grid-cols-2 items-center">
    <div>
      <h1 class="text-4xl font-bold leading-tight">
        Dor Shem Tov
      </h1>

      <p class="mt-2 text-accent font-semibold">
        Level Designer • Game Designer • Product Manager
      </p>

      <p class="mt-4 max-w-xl text-neutral-300">
        Creative and innovative game designer with a passion for crafting immersive gaming experiences.
        Skilled in concept development, level design, and gameplay systems.
        Committed to delivering engaging gameplay that captivates players and drives success.
      </p>

      <div class="mt-6 flex gap-4">
        <a href="/projects" class="btn">Projects</a>
        <a href="/resume" class="btn">Resume</a>
      </div>
    </div>

    <div class="flex justify-center">
      <img
        src="/images/dst-profile.jpg"
        alt="Dor Shem Tov"
        class="max-h-[320px] w-auto object-contain"
        loading="eager"
      />
    </div>
  </section>

  <!-- FEATURED PROJECTS -->
  <section class="mt-16">
    <h2 class="text-2xl font-bold mb-6">Featured Projects</h2>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredProjects.map((project) => (
        <a
          href={`/projects/${project.slug}/`}
          class="card block"
        >
          <img
            src={project.cover ?? "/images/hero-placeholder.svg"}
            alt={project.title}
            class="w-full h-44 object-cover rounded-xl mb-3"
            loading="lazy"
          />

          <h3 class="text-lg font-semibold">
            {project.title}
          </h3>

          <p class="text-sm opacity-80">
            {project.summary}
          </p>

          {project.tags && project.tags.length > 0 && (
            <div class="mt-3 flex flex-nowrap gap-2 min-w-0">
              {project.tags.map((tag) => (
                <span class="tag shrink">{tag}</span>
              ))}
            </div>
          )}
        </a>
      ))}
    </div>
  </section>

</Base>
