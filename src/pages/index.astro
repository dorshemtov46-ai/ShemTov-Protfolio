---
import Base from "../layouts/Base.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
const featured = projects
  .filter((p) => p.data.featured)
  .sort((a, b) => new Date(b.data.date) - new Date(a.data.date))
  .slice(0, 6);
---

<Base title="Dor Shem Tov — Unity Game Developer">
  <section class="grid gap-10 lg:grid-cols-[minmax(0,1.3fr)_minmax(0,1fr)] items-center">
    <div class="space-y-4">
      <p class="text-sm font-mono text-accent">Game Design • Systems • Prototyping</p>

      <h1 class="text-4xl sm:text-5xl font-bold leading-tight">
        Unity Developer & Game Designer
      </h1>

      <p class="opacity-90 max-w-xl">
        Building polished gameplay systems, rapid prototypes, and production-ready tools.
        Focused on clarity, iteration speed, and clean architecture.
      </p>

      <!-- BUTTONS -->
      <div class="flex gap-4 mt-6">
        <a href="/projects" class="btn btn-primary">View Projects</a>
        <a href="/resume" class="btn btn-primary">View Resume</a>
      </div>
    </div>

    <!-- RIGHT SIDE FEATURED CARDS OR IMAGE -->
    <div class="grid gap-4">
      {featured.map((project) => (
        <a
          href={`/projects/${project.slug}`}
          class="card hover:scale-[1.02] transition-transform"
        >
          <div class="flex items-center gap-4">
            <img
              src={project.data.cover}
              alt={project.data.title}
              class="h-16 w-16 rounded-lg object-cover"
            />
            <div>
              <h3 class="font-semibold">{project.data.title}</h3>
              <p class="text-xs opacity-70">{project.data.summary}</p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>

  <section class="mt-20">
    <h2 class="section-title">Featured Projects</h2>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-8">
      {featured.map((project) => (
        <a href={`/projects/${project.slug}`} class="card hover:scale-[1.02] transition-transform">
          <img
            src={project.data.cover}
            alt={project.data.title}
            class="rounded-lg object-cover h-40 w-full"
          />
          <div class="mt-3">
            <h3 class="font-semibold">{project.data.title}</h3>
            <p class="text-sm opacity-80">{project.data.summary}</p>
          </div>
        </a>
      ))}
    </div>
  </section>
</Base>
